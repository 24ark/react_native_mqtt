{
  "name": "react_native_mqtt",
  "version": "1.1.5",
  "description": "Drop in mqtt client for react native.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Introvertuous/react_native_mqtt"
  },
  "dependencies": {
    "react-native-storage": "^0.1.2"
  },
  "main": "dist/src/index.js",
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "tsx",
      "quiet": true
    }
  },
  "scripts": {
    "watch": "npm-watch",
    "build": "tsc",
    "lint": "tslint src/**/*.ts{,x} __tests__/**/*.ts{,x}",
    "test": "jest dist",
    "release": "yarn build && typedoc --out docs src"
  },
  "devDependencies": {
    "@types/jest": "^19.2.3",
    "@types/node": "^7.0.21",
    "jest-cli": "^20.0.3",
    "npm-watch": "^0.1.9",
    "tslint": "5.2.0",
    "tslint-config-airbnb": "^5.0.1",
    "tslint-react": "^3.0.0",
    "typedoc": "^0.7.1",
    "typescript": "^2.3.2"
  },
  "jest": {
    "verbose": true
  }
}
